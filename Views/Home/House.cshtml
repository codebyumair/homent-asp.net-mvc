@model IEnumerable<Homent.Models.tblHouse>
@{
    ViewBag.Title = "House";
}
@Html.Partial("_Navbar")


@foreach (var house in Model)
{
    <div class="container mt-3 house-page bg-white rounded p-3 shadow-sm">
        <div class="row">
            <h2 class="text-primary">
                @house.HouseName
            </h2>
            <p>
                <span class="fs-6 text-primary">
                    <i class="material-icons-round fs-6 text-primary">
                        location_on
                    </i> @house.Address
                </span>
            </p>
            <div class="house-main-img col-8">
                <img src="@Url.Content(@house.ImagePath)" alt="House image" class="house-img rounded" />
            </div>
            <div class="col-md-4">
                <h4>Facilities</h4>
                <div class="row">
                    <div class="col-md-5 d-flex gap-2 fs-6">
                        <i class="material-icons-round text-primary fs-4">
                            maps_home_work
                        </i>@house.Type
                    </div>
                    <div class="col-md-3 d-flex gap-2 fs-6">
                        <i class="material-icons-round text-primary fs-4">
                            meeting_room
                        </i>@house.Room
                    </div>
                    <div class="col-md-3 d-flex gap-2 ">
                        <i class="material-icons-round text-primary">
                            rounded_corner
                        </i>@house.FloorArea  <span class="text-secondary"> m<sup class="text-secondary">2</sup></span>
                    </div>

                </div>
                <hr />
                <div class="row">
                    <div class="col-md-5 mb-4">
                        <h6>Property type</h6>
                    </div>
                    <div class="col-md-6 text-end">
                        @house.Type
                    </div>
                    <div class="col-md-5 mb-4">
                        <h6>Rent per month</h6>
                    </div>
                    <div class="col-md-6 text-end">
                        ₹ @house.Rent
                    </div>
                    <div class="col-md-5 mb-4">
                        <h6>Deposit</h6>
                    </div>
                    <div class="col-md-6 text-end">
                        @house.Deposit
                    </div>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-primary col-md-11 rent-btn" data-bs-toggle="modal" data-bs-target="#contactModal">
                        Rent now
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mt-3">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="Description" aria-selected="true">Description</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="room-tab" data-bs-toggle="tab" data-bs-target="#room" type="button" role="tab" aria-controls="room" aria-selected="false">Rooms and facilities</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="rent-tab" data-bs-toggle="tab" data-bs-target="#rent" type="button" role="tab" aria-controls="rent" aria-selected="false">Rent and deposit</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                        <p class="mt-3">@house.Description</p>
                    </div>
                    <div class="tab-pane fade" id="room" role="tabpanel" aria-labelledby="room-tab">
                        <dl class="d-flex gap-3 mt-3">
                            <dt>
                                @Html.DisplayNameFor(model => model.Type):
                            </dt>

                            <dd>
                                @house.Type
                            </dd>
                            |
                            <dt>
                                @Html.DisplayNameFor(model => model.Room):
                            </dt>

                            <dd>
                                @house.Room
                            </dd>
                            |
                            <dt>
                                @Html.DisplayNameFor(model => model.FloorArea):
                            </dt>

                            <dd>
                                @house.FloorArea <span> m<sup>2</sup></span>
                            </dd>
                        </dl>
                    </div>
                    <div class="tab-pane fade" id="rent" role="tabpanel" aria-labelledby="rent-tab">
                        <dl class="mt-3 d-flex gap-3">
                            <dt>
                                @Html.DisplayNameFor(model => model.Rent):
                            </dt>

                            <dd>
                                ₹ @house.Rent
                            </dd>
                            |
                            <dt>
                                @Html.DisplayNameFor(model => model.Deposit):
                            </dt>

                            <dd>
                                ₹ @house.Deposit
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>

    </div>
}


<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered border-0">
        <div class="modal-content" id="contactUpModalContent">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white" id="contactModalLable">Contact with owner</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row d-flex justify-content-center">
                    @foreach (var o in ViewBag.OwnerInfo)
                    {
                        <div class="col-md-4 d-flex gap-2 tenant-link">
                            <a href="mailto:@o.Email" class="d-flex gap-2 align-items-center">
                                <i class="material-icons-round text-primary">
                                    mail
                                </i> Mail
                            </a>
                        </div>
                        <div class="col-md-4 d-flex gap-2 owner-link">
                            <a href="tel:@o.Mobile" class="d-flex gap-2 align-items-center">
                                <i class="material-icons-round text-primary">
                                    call
                                </i> Call
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>